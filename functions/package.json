{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "run-p build:watch serve:functions",
    "serve:functions": "npm run build && firebase serve --only functions",
    "shell": "run-p build:watch shell:functions",
    "shell:functions": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@actito/data-model-sdk": "^0.1.5",
    "firebase-admin": "~7.0.0",
    "firebase-functions": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/uuid": "^3.4.4",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "private": true
}
